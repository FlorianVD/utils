{
    "compilerOptions": {
        "esModuleInterop": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "declaration": true,
        "target": "ES2020",
        "lib": ["dom", "es2020"],
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmit": true,
        "strict": true
    },
    "include": ["lib/**/*.ts"]
}
